}
.close-line{
  width: 2px;
  height: 80px;
  background-color: #FFFFFF;
  margin-left: 50%;
}
.close{
  background-image: url("http://39.105.101.0/assets/tcgb_2.png");
  background-size:100% 100%;
  background-repeat: no-repeat;
  width: 80rpx;
  height: 80rpx;
  margin-left: 45%;
}

.input{
  width: 700rpx;
